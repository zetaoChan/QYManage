@{
    ViewBag.Title = "系统参数列表";
}
<div ng-controller="sysConfigController">
    <div class="bs-callout bs-callout-primary col-md-12">
        <h4>系统参数管理</h4>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        系统参数列表
                    </h3>
                </div>
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>参数系统名称</th>
                        <th>参数名称</th>
                        <th>参数值</th>
                        <th>编辑</th>
                    </tr>
                    <tbody>
                        <tr ng-repeat="item in items" ng-cloak>
                            <td>{{item.sysName}}</td>
                            <td>{{item.name}}</td>
                            <td>{{item.value}}</td>
                            <td><a href="javascript:;" ng-click="edit(item.sysName)"><i class="fa fa-fw fa-edit"></i></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @Html.Partial("Edit")
</div>
@section scripts{
    <script type="text/javascript">
        seajs.use("pages/sysConfig/index.js", function () {
            angular.bootstrap(document, ['app']);
        })
    </script>
}