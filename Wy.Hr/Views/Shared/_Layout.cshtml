<!DOCTYPE html>
<html lang="en">
    <head>
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;">
        <!-- Bootstrap -->
        <link rel="stylesheet" media="screen" href="~/content/2015/css/bootstrap.min.css">
        @*<link rel="stylesheet" media="screen" href="~/Content/2015/css/bootstrap-theme.min.css">*@
        @*<link rel="stylesheet" media="screen" href="~/Content/2015/css/bootstrap-admin-theme.css">*@
        <link rel="stylesheet" media="screen" href="~/Content/2015/css/bs-callout.css">
        <link rel="stylesheet" href="~/content/2015/css/font-awesome.css" />
        <link rel="stylesheet" href="~/content/js/artDialog/css/ui-dialog.css" />
        <!-- angular tree -->
        <link rel="stylesheet" type="text/css" href="~/Content/js/angular-tree-control-master/css/tree-control.css">
        <link rel="stylesheet" type="text/css" href="~/Content/js/angular-tree-control-master/css/tree-control-attribute.css">
        <!-- Custom Styles-->
        <link href="/content/2015/css/custom-styles.css" rel="stylesheet" />
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
           <script type="text/javascript" src="js/html5shiv.js"></script>
           <script type="text/javascript" src="js/respond.min.js"></script>
        <![endif]-->
        <script type="text/javascript" src="~/content/2015/js/jquery-1.10.2.js"></script>
        <script type="text/javascript" src="~/content/2015/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="~/Content/2015/js/twitter-bootstrap-hover-dropdown.js"></script>
        <script type="text/javascript" src="~/Content/2015/js/bootstrap-admin-theme-change-size.js"></script>
        <script src="~/Content/js/angular.min.js"></script>
        <link href="http://netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css" rel="stylesheet">
        <link href="~/Content/2015/css/wysiwyg.css" rel="stylesheet">
        <script src="~/Content/js/bootstrap-wysiwyg.js" type="text/javascript"></script>
        <script src="~/Content/js/sea.js" type="text/javascript"></script>
        <script type="text/javascript">
            seajs.config({
                base: "/content/",
                alias: {
                    "jquery": "/content/2015/js/jquery-1.10.2.js",
                    "dialog": "/content/js/artDialog/dialog-plus-min.js"
                }
            })
        </script>
        @RenderSection("head", required: false)
        @RenderSection("scripts", required: false)
    </head>
    <body>
        <!--  导航菜单1  -->
        @Html.Partial("TopNavbar", "test1")
        

        <!--  页面内容  -->
        <div id="body" class="container">
            <section class="content-wrapper main-content clear-fix" style="height:100%;margin-top:10px;">
                @RenderBody()
            </section>
        </div>

        <!--  系统底部  -->
        @Html.Partial("footer")
        
        <script type="text/javascript">
            var screenHeight = window.screen.availHeight;
            //document.getElementById('body').style.height = screenHeight;
            $('#body').css('height', screenHeight - 203);
        </script>

    </body>

</html>
