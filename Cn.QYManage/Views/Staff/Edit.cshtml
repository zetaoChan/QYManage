<div class="modal fade" id="staffEditModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">员工信息</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered" style="text-align:center;">
                    <tbody>
                        <tr>
                            <td>姓名</td>
                            <td><input type="text" class="form-control" ng-model="staffModel.name" placeholder="姓名" /></td>
                            <td>性别</td>
                            <td>
                                <select type="text" class="form-control" ng-model="staffModel.sex">
                                    <option value="0">男</option>
                                    <option value="1">女</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>身份证号码</td>
                            <td><input type="text" class="form-control" ng-model="staffModel.iDCardNum" placeholder="身份证号码" /></td>
                            <td>出生日期</td>
                            <td><input type="text" class="form-control" date-picker ng-model="staffModel.birthDate" placeholder="出生日期" /></td>
                        </tr>
                        <tr>
                            <td>籍贯</td>
                            <td>
                                <select type="text" class="form-control" ng-model="staffModel.nativePlace">
                                    <option value="">请选择籍贯</option>
                                    <option ng-repeat="item in selNativePlaces" value="{{$index}}">{{item}}</option>
                                </select>
                            </td>
                            <td>民族</td>
                            <td>
                                <select type="text" class="form-control" ng-model="staffModel.nation">
                                    <option value="">请选择民族</option>
                                    <option ng-repeat="item in selNations" value="{{$index}}">{{item}}</option> >
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>部门</td>
                            <td>
                                <select type="text" class="form-control" ng-model="staffModel.departmentId" ng-options="item.id as item.label for item in selDepts">
                                    <option value="">请选择部门</option>
                                </select>
                            </td>
                            <td>职位</td>
                            <td>
                                <select type="text" class="form-control" ng-model="staffModel.positionId" ng-options="item.id as item.name for item in selPositions">
                                    <option value="">请选择职位</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>学历</td>
                            <td>
                                <select type="text" class="form-control" ng-model="staffModel.education">
                                    <option value="">请选择学历</option>
                                    <option ng-repeat="item in selEducations" value="{{$index}}">{{item}}</option>
                                </select>
                            </td>
                            <td>毕业学校</td>
                            <td><input type="text" class="form-control" ng-model="staffModel.graduatingAcademy" placeholder="毕业学校" /></td>
                        </tr>
                        <tr>
                            <td>邮箱</td>
                            <td><input type="text" class="form-control" ng-model="staffModel.email" placeholder="邮箱" /></td>
                            <td>手机</td>
                            <td><input type="text" class="form-control" ng-model="staffModel.mobile" placeholder="手机" /></td>
                        </tr>
                        <tr>
                            <td>入职日期</td>
                            <td><input type="text" class="form-control" date-picker ng-model="staffModel.entryTime" placeholder="入职日期" /></td>
                            <td>婚姻状况</td>
                            <td>
                                <select type="text" class="form-control" ng-model="staffModel.maritalStatus">
                                    <option ng-repeat="item in selMaritalStatus" value="{{$index}}">{{item}}</option> >
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>现住地址</td>
                            <td colspan="3"><input type="text" class="form-control" ng-model="staffModel.address" placeholder="现住地址" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" ng-click="save()">保存</button>
            </div>
        </div>
    </div>
</div>