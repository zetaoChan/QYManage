<div class="modal fade" id="msgDetailModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">消息窗口</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered" style="text-align:center;">
                    <tbody>
                        <tr>
                            <td width="100px">发送者</td>
                            <td><input type="text" class="form-control" ng-model="detailModel.senderName" readonly /></td>
                        </tr>
                        <tr>
                            <td width="100px">发送时间</td>
                            <td><input type="text" class="form-control" ng-model="detailModel.sendDate" readonly /></td>
                        </tr>
                        <tr>
                            <td>内容</td>
                            <td><textarea class="form-control" ng-model="detailModel.contents" readonly></textarea></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>