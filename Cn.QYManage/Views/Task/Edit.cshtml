<div class="modal fade" id="taskEditModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">任务编辑</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered" style="text-align:center;">
                    <tbody>
                        <tr>
                            <td>任务主题</td>
                            <td><input type="text" class="form-control" ng-model="taskModel.title" /></td>
                        </tr>
                        <tr>
                            <td>期望完成时间</td>
                            <td><input type="text" class="form-control" date-picker ng-model="taskModel.expectedTime" /></td>
                        </tr>
                        <tr>
                            <td>执行者</td>
                            <td><select select2 style="width:100%;" ng-model="taskModel.executorId" ng-options="item.Id as item.Name for item in selStaffs"></select></td>
                        </tr>
                        <tr>
                            <td>任务内容</td>
                            <td><textarea class="form-control" ng-model="taskModel.contents"></textarea></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" ng-click="save()">保存</button>
            </div>
        </div>
    </div>
</div>
